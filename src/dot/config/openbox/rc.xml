<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">

  <resistance>
    <strength>10</strength>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>

  <focus>
    <focusNew>yes</focusNew>
    <followMouse>no</followMouse>
    <focusLast>yes</focusLast>
    <underMouse>no</underMouse>
    <focusDelay>200</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <placement>
    <policy>Smart</policy>
    <center>yes</center>
    <monitor>Primary</monitor>
    <primaryMonitor>1</primaryMonitor>
  </placement>

  <theme>
    <name>Carbon</name>
    <titleLayout>NLIMC</titleLayout>
    <keepBorder>yes</keepBorder>
    <animateIconify>yes</animateIconify>
    <font place="ActiveWindow">
      <name>sans</name>
      <size>8</size>
      <weight>bold</weight>
      <slant>normal</slant>
    </font>
    <font place="InactiveWindow">
      <name>sans</name>
      <size>8</size>
      <weight>bold</weight>
      <slant>normal</slant>
    </font>
    <font place="MenuHeader">
      <name>sans</name>
      <size>9</size>
      <weight>normal</weight>
      <slant>normal</slant>
    </font>
    <font place="MenuItem">
      <name>sans</name>
      <size>9</size>
      <weight>normal</weight>
      <slant>normal</slant>
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>sans</name>
      <size>9</size>
      <weight>bold</weight>
      <slant>normal</slant>
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>sans</name>
      <size>9</size>
      <weight>bold</weight>
      <slant>normal</slant>
    </font>
  </theme>

  <desktops>
    <number>3</number>
    <firstdesk>1</firstdesk>
    <names>
    <name>main</name>
    <name>work</name>
    <name>misc</name>
    </names>
    <popupTime>875</popupTime>
  </desktops>

  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Nonpixel</popupShow>
    <popupPosition>Center</popupPosition>
    <popupFixedPosition>
      <x>10</x>
      <y>10</y>
    </popupFixedPosition>
  </resize>

  <keyboard>

    <keybind key="W-Left"><action name="DesktopLeft"><to>left</to><wrap>no</wrap></action></keybind>
    <keybind key="W-Right"><action name="DesktopRight"><to>right</to><wrap>no</wrap></action></keybind>
    <keybind key="S-W-Left"><action name="SendToDesktopLeft"><to>left</to><wrap>no</wrap></action></keybind>
    <keybind key="S-W-Right"><action name="SendToDesktopRight"><to>right</to><wrap>no</wrap></action></keybind>

    <keybind key="W-space"><action name="ShowMenu"><menu>root-menu</menu></action></keybind>
    <keybind key="W-Return"><action name="Execute"><command>rxvt</command></action></keybind>
    <keybind key="W-r"><action name="Execute"><command>grun</command></action></keybind>
    <keybind key="W-d"><action name="ToggleShowDesktop"/></keybind>

    <keybind key="A-s"><action name="ToggleShade"/></keybind>
    <keybind key="A-m"><action name="ToggleMaximizeFull"/></keybind>
    <keybind key="A-F4"><action name="Close"/></keybind>
    <keybind key="A-space"><action name="ShowMenu"><menu>client-menu</menu></action></keybind>

    <keybind key="A-Tab">
      <action name="NextWindow">
        <finalactions>
                <action name="Focus"/>
                <action name="Raise"/>
                <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>

  </keyboard>

</openbox_config>
