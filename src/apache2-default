ServerName example.com

<VirtualHost *:80>
    ServerName www.example.com
    DocumentRoot /home/www/www.example.com/public
    <Directory />
    Order Deny,Allow
    Deny from all
    Options None
    AllowOverride None
    </Directory>
    <Directory /home/www/www.example.com/public>
    Order Allow,Deny
    Allow from all
    AllowOverride None
    <LimitExcept GET POST>
            Order allow,deny
    </LimitExcept>
    </Directory>
    <Files ~ "^\.ht">
    Order allow,deny
    Deny from all
    Satisfy All
    </Files>
    ErrorLog /home/www/logs/apache2-error.log
    LogLevel warn
    CustomLog /home/www/logs/apache2-access.log combined
</VirtualHost>

<VirtualHost *:80>
    ServerName static.example.com
    DocumentRoot /home/www/static.example.com/public
    <Directory /home/www/static.example.com/public>
    Options FollowSymLinks
    Order Allow,Deny
    Allow from all
    AllowOverride All
    </Directory>
</VirtualHost>
